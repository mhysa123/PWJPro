<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/guide_viewpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/ll_contain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_30dp"
            android:orientation="horizontal"></LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/guide_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_30dp"
        android:layout_marginLeft="@dimen/width_height_110dp"
        android:layout_marginRight="@dimen/width_height_110dp"
        android:background="@mipmap/guide_button"
        android:gravity="center"
        android:text="马上体验"
        android:textColor="#000"
        android:textSize="@dimen/text_18sp"
        android:visibility="gone" />
</RelativeLayout>
